# Maintainer: Gary DeLaney <gld1982ltd@gmail.com>
# Contributor: Joel Teichroeb <joel@teichroeb.net>

_pkgname=orbital
pkgname=$_pkgname-git
pkgver=0.1.742
pkgrel=1
pkgdesc="A Wayland shell client"
arch=(i686 x86_64)
url="https://github.com/giucam/orbital"
license=('LGPL')
depends=('weston-orbital-git' 'qt5-tools' 'qt5-wayland' 'oxygen-icons')
optdepends=('solid' 'alsa')
makedepends=('git' 'cmake')
provides=("$_pkgname")
conflicts=("$_pkgname")
source=(git://github.com/giucam/orbital.git)
sha1sums=('SKIP')

pkgver() {
  cd "$_pkgname"
    printf "%s.%s" "$(git describe --abbrev=0 --tags | sed 's/v//;s/\([^-]*-g\)/r\1/;s/-/./g')" "$(git rev-list --count HEAD)"
}

build() {
	cd ${srcdir}/${_pkgname}
	cmake ./ -DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd ${srcdir}/${_pkgname}
	make DESTDIR=${pkgdir} install
}
